# ==========================================
# Volaris Trading Platform - Environment Configuration
# ==========================================
# Copy this file to .env and fill in your actual values

# ==========================================
# Application Settings
# ==========================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ==========================================
# Database - PostgreSQL (Neon/Supabase)
# ==========================================
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@host:5432/volaris
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false

# ==========================================
# Redis Cache (Upstash)
# ==========================================
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here
REDIS_TTL_DEFAULT=300

# ==========================================
# Monitoring - Sentry (Optional)
# ==========================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==========================================
# API Configuration
# ==========================================
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ==========================================
# Market Data API Keys (Phase 1.2)
# ==========================================

# Schwab API (Primary real-time 1m/5m) - OAuth 2.0
SCHWAB_APP_KEY=your_schwab_app_key
SCHWAB_SECRET_KEY=your_schwab_secret_key
SCHWAB_REDIRECT_URI=https://127.0.0.1:8000/callback
SCHWAB_API_BASE=https://api.schwabapi.com
SCHWAB_REFRESH_TOKEN=

# Tiingo (EOD data)
TIINGO_API_KEY=your_tiingo_api_key
TIINGO_API_BASE=https://api.tiingo.com

# Alpaca (Minute delayed historical)
ALPACA_API_KEY=your_alpaca_api_key_id
ALPACA_API_SECRET=your_alpaca_api_secret_key
ALPACA_API_BASE=https://paper-api.alpaca.markets

# Databento (Historical backfills)
DATABENTO_API_KEY=your_databento_api_key
DATABENTO_API_BASE=https://hist.databento.com

# Finnhub (Fundamentals & news)
FINNHUB_API_KEY=your_finnhub_api_key
FINNHUB_WEBHOOK_SECRET=
FINNHUB_API_BASE=https://finnhub.io/api/v1

# ==========================================
# Discord Integration (Phase 8)
# ==========================================
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url
DISCORD_SERVER_ID=your_discord_server_id
DISCORD_GUILD_ID=your_discord_guild_id_for_slash_commands
DISCORD_BOT_ENABLED=false
API_BASE_URL=http://localhost:8000
PRICE_ALERT_POLL_SECONDS=60
PRICE_STREAM_POLL_SECONDS=60
PRICE_STREAM_DEFAULT_INTERVAL_SECONDS=900
PRICE_STREAM_MIN_INTERVAL_SECONDS=300
PRICE_STREAM_MAX_INTERVAL_SECONDS=7200
SENTIMENT_CACHE_SECONDS=600
TOP_MOVERS_LIMIT=5
DISCORD_DEFAULT_CHANNEL_ID=
POLYGON_API_KEY=
POLYGON_API_BASE=https://api.polygon.io
MARKETSTACK_API_KEY=
MARKETSTACK_API_BASE=http://api.marketstack.com/v1

# ==========================================
# Trading Configuration
# ==========================================
DEFAULT_ACCOUNT_SIZE=25000.0
MAX_RISK_PERCENTAGE=10.0
PDT_THRESHOLD=25000

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ==========================================
# Scheduler (Phase 2.2)
# ==========================================
SCHEDULER_ENABLED=false
SCHEDULER_TIMEZONE=UTC
REALTIME_JOB_INTERVAL_SECONDS=60
REALTIME_SYNC_BATCH_SIZE=25
FIVE_MINUTE_JOB_INTERVAL_SECONDS=300
OPTION_CHAIN_JOB_INTERVAL_MINUTES=15
IV_METRICS_JOB_INTERVAL_MINUTES=30
EOD_SYNC_CRON_HOUR=22
EOD_SYNC_CRON_MINUTE=15
HISTORICAL_BACKFILL_CRON_HOUR=3
HISTORICAL_BACKFILL_LOOKBACK_DAYS=30
SP500_REFRESH_CRON_DAY=mon
SP500_REFRESH_CRON_HOUR=6
SP500_REFRESH_CRON_MINUTE=0
